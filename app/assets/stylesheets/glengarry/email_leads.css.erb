body {
  background: url("<%= asset_path('glengarry/bg.png') %>");
  font-family: "PT Sans Narrow", "Verdana";
  font-weight: 400;
  padding: 0;
  margin: 0;
  letter-spacing: .03em;
  line-height: 1.5;
}

header {
  background: #FFF;
  height: 120px;
  padding: 0;
  margin: 0 0 1em 0;
}

h1 {
  width: 800px;
  height: 120px;
  padding-top: 30px;
  text-align: right;
  margin: 0px auto;
}

h1 small {
  display: block;
  font-size: 12px;
  font-weight: 100;
  font-family: helvetica, sans-serif;
}

#page {
  width: 800px;
  margin: 0px auto;
}

table {
  border: 1px solid #DFDFDF;
  background-color: #F9F9F9;
  width: 100%;
  margin-top: 1.6em;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  font-family: Arial,"Bitstream Vera Sans",Helvetica,Verdana,sans-serif;
  color: #333;
  margin-bottom: 2em;
}
table td, table th {
  border-top-color: white;
  border-bottom: 1px solid #DFDFDF;
  color: #555;
}
table th {
  text-shadow: rgba(255, 255, 255, 0.796875) 0px 1px 0px;
  font-family: Georgia,"Times New Roman","Bitstream Charter",Times,serif;
  font-weight: normal;
  padding: 7px 7px 8px;
  text-align: left;
  line-height: 1.3em;
  font-size: 14px;
  height: 50px;
}

table tr {
  height: 3em;
}

table td {
  font-size: 12px;
  padding: 4px 7px 2px;
  vertical-align: top;
}

.pagination {
  text-align: center;
  padding: 1em 0 0 0 ;
}

.pagination .page, .first, .prev, .next, .last {
  width: 32px;
  height: 32px;
  display: inline-block;
}

.pagination .first, .last {
  width: 64px; 
}

